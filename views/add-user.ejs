    <form method="POST" action="/add">
      <label>Name:</label>
      <input type="text" name="name" required />
      <label>Email:</label>
      <input type="email" name="email" required />
      <button type="submit">Add User</button>
    </form>
    
    <button style="max-width: 150px;" onclick="window.location.href='/'">
  Back to Users
</button>
</div>
    </div>
